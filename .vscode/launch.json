    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch task1 teeth.obj",
            "type": "cppdbg",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            "args": [
                "../model/teeth.obj",
                // "../model/bigguy2.obj",
            ],
            "stopAtEntry": false,
            "cwd": "/home/hb/Documents/CG/hw/HW3/HW3-CodeFramework/build",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
